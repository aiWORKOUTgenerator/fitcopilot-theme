// Import design system
@use '../../../styles/design-system/index' as *;
@import './tooltip-variables.scss';

// Base Tooltip styles
.tooltip-wrapper {
    position: relative;
    display: inline-block;
}

.tooltip-trigger {
    display: inline-block;
}

.tooltip-content {
    position: absolute;
    z-index: 1000;
    background-color: var(--tooltip-bg);
    color: var(--tooltip-text-color);
    border: 1px solid var(--tooltip-border-color, var(--accent-color, rgba(132, 204, 22, 0.3)));
    border-radius: var(--tooltip-border-radius);
    padding: var(--tooltip-padding);
    font-size: var(--tooltip-font-size);
    line-height: var(--tooltip-line-height);
    max-width: var(--tooltip-max-width);
    box-shadow: var(--tooltip-shadow);
    opacity: 0;
    visibility: hidden;
    transition: var(--tooltip-transition);
    pointer-events: none;
}

.tooltip-content.visible {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
}

// Position variations with transform
.tooltip-content.tooltip-top {
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(var(--tooltip-transform-y, -8px));
    margin-bottom: 8px;

    &.visible {
        transform: translateX(-50%) translateY(0);
    }

    &::after {
        content: '';
        position: absolute;
        top: 100%;
        left: 50%;
        margin-left: calc(var(--tooltip-arrow-size) / -2);
        border-width: calc(var(--tooltip-arrow-size) / 2);
        border-style: solid;
        border-color: var(--tooltip-bg) transparent transparent transparent;
    }
}

.tooltip-content.tooltip-bottom {
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(var(--tooltip-transform-y, 8px));
    margin-top: 8px;

    &.visible {
        transform: translateX(-50%) translateY(0);
    }

    &::after {
        content: '';
        position: absolute;
        bottom: 100%;
        left: 50%;
        margin-left: calc(var(--tooltip-arrow-size) / -2);
        border-width: calc(var(--tooltip-arrow-size) / 2);
        border-style: solid;
        border-color: transparent transparent var(--tooltip-bg) transparent;
    }
}

.tooltip-content.tooltip-left {
    right: 100%;
    top: 50%;
    transform: translateY(-50%) translateX(var(--tooltip-transform-x, -8px));
    margin-right: 8px;

    &.visible {
        transform: translateY(-50%) translateX(0);
    }

    &::after {
        content: '';
        position: absolute;
        left: 100%;
        top: 50%;
        margin-top: calc(var(--tooltip-arrow-size) / -2);
        border-width: calc(var(--tooltip-arrow-size) / 2);
        border-style: solid;
        border-color: transparent transparent transparent var(--tooltip-bg);
    }
}

.tooltip-content.tooltip-right {
    left: 100%;
    top: 50%;
    transform: translateY(-50%) translateX(var(--tooltip-transform-x, 8px));
    margin-left: 8px;

    &.visible {
        transform: translateY(-50%) translateX(0);
    }

    &::after {
        content: '';
        position: absolute;
        right: 100%;
        top: 50%;
        margin-top: calc(var(--tooltip-arrow-size) / -2);
        border-width: calc(var(--tooltip-arrow-size) / 2);
        border-style: solid;
        border-color: transparent var(--tooltip-bg) transparent transparent;
    }
}

// Inner content styling
.tooltip-inner {
    width: 100%;
}

.tooltip-header {
    display: flex;
    align-items: flex-start;
    margin-bottom: 4px;
}

.tooltip-icon {
    margin-right: 8px;
    color: var(--tooltip-title-color);
    flex-shrink: 0;
}

.tooltip-title {
    font-weight: 500;
    color: var(--tooltip-title-color);
    font-size: var(--tooltip-font-size);
    margin-bottom: 4px;
}

.tooltip-body {
    font-size: calc(var(--tooltip-font-size) - 2px);
}

// Reduced motion preferences
@media (prefers-reduced-motion: reduce) {
    .tooltip-content {
        transition: opacity 0.1s ease, visibility 0.1s ease;
    }
}