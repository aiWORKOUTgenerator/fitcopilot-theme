.anthropometrics-selector {
    width: 100%;

    .section-description {
        font-size: 0.875rem;
        color: rgb(156, 163, 175);
        margin-bottom: 1.5rem;
    }

    .form-row {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 1.5rem;

        @media (min-width: 640px) {
            flex-direction: row;

            .form-group {
                flex: 1;
            }
        }
    }

    .form-group {
        label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: rgb(209, 213, 219);
            margin-bottom: 0.5rem;
        }
    }

    .input-group {
        display: flex;
        align-items: center;
    }

    .numeric-input,
    .unit-selector,
    .full-width-selector {
        background-color: rgba(55, 65, 81, 0.4);
        border: 1px solid rgba(75, 85, 99, 0.6);
        border-radius: 0.375rem;
        padding: 0.625rem;
        font-size: 0.875rem;
        color: white;
        transition: border-color 0.2s ease;

        &:focus {
            outline: none;
            border-color: rgb(139, 92, 246);
            box-shadow: 0 0 0 2px rgba(139, 92, 246, 0.2);
        }

        &::placeholder {
            color: rgb(156, 163, 175);
        }
    }

    .numeric-input {
        width: 100%;
    }

    .unit-selector,
    .full-width-selector {
        width: 100%;
    }

    .unit-label {
        margin-left: 0.5rem;
        color: rgb(156, 163, 175);
        font-size: 0.875rem;
    }

    .feet-inches-container {
        display: flex;
        gap: 0.5rem;
        width: 100%;

        .feet-input,
        .inches-input {
            display: flex;
            align-items: center;
            flex: 1;
        }
    }

    .mt-2 {
        margin-top: 0.5rem;
    }
}