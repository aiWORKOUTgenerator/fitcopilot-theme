#!/usr/bin/env sh

# Allow bypassing with SKIP_LINT=1 git commit
if [ -n "$SKIP_LINT" ]; then
  echo "âš ï¸ Skipping lint checks due to SKIP_LINT environment variable"
  exit 0
fi

# Run linting
echo "ğŸ” Running ESLint checks..."
npm run lint

# Optimize imports automatically
echo "ğŸ§¹ Optimizing imports..."
npm run lint:optimize-imports

# Check for deprecated code
echo "ğŸ” Checking for deprecated code patterns..."
npm run lint:scan-deprecated

# Verify imports
echo "ğŸ” Verifying imports..."
npm run verify:imports

# Check type coverage
echo "ğŸ“Š Checking TypeScript type coverage..."
npm run lint:type-coverage || echo "âš ï¸ Type coverage below threshold - please fix any 'any' types"

# Generate ESLint warning report
echo "ğŸ“ Generating ESLint warning report..."
npm run lint:warning-report

# Run tests
echo "ğŸ§ª Running tests..."
npm test % %

echo "âœ… Pre-commit checks passed!" 